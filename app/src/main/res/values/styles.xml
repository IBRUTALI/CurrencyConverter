<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text style. -->
    <style name="Regular">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Regular.LargeTitle1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Regular.Title1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Regular.Title2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Regular.Title3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Regular.Title4">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Regular.Text1">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Regular.Caption1">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Regular.ButtonText1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Regular.ButtonText2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Regular.ElementalText">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Bold">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="Bold.LargeTitle1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Bold.Title1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Bold.Title2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Bold.Title3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Bold.Title4">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Bold.Text1">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Bold.Caption1">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Bold.ButtonText1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="Bold.ButtonText2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Bold.ElementalText">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Toolbar  -->
    <style name="CustomToolbarStyle">
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CustomToolbarStyle.Event" parent="CustomToolbarStyle">
        <item name="android:titleTextAppearance">@style/Regular.ElementalText</item>
        <item name="android:tint">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/text_blue</item>
    </style>

    <!--  ProgressBar  -->
    <style name="BaseProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/elem_blue</item>
    </style>

    <!--  ImageButton  -->
    <style name="BaseImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="tint">@color/elem_blue</item>
    </style>

    <!--  Button  -->
    <style name="BaseButton" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/elem_blue</item>
        <item name="android:colorControlHighlight">@color/bg_blue_light</item>
        <item name="android:backgroundTint">@drawable/selector_bg_button_base</item>
    </style>

    <style name="BaseButton.Main">
        <item name="android:textAppearance">@style/Bold.ElementalText</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- TextInputLayout options. -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">56dp</item>
        <item name="boxCornerRadiusTopEnd">56dp</item>
        <item name="boxCornerRadiusBottomStart">56dp</item>
        <item name="boxCornerRadiusBottomEnd">56dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/elem_red</item>
        <item name="errorTextAppearance">@style/Regular.Title2</item>
        <item name="errorTextColor">@color/elem_red</item>
        <item name="helperTextTextAppearance">@style/Regular.Title3</item>
        <item name="helperTextTextColor">@color/text_red</item>
        <item name="hintTextAppearance">@style/Regular.Title3</item>
        <item name="hintTextColor">@color/text_grey</item>
        <item name="placeholderTextAppearance">@style/Regular.Title2</item>
    </style>

</resources>